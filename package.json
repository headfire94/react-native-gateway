{
  "name": "react-native-gateway",
  "version": "1.0.0",
  "description": "Render React-Native component into new context",
  "main": "lib/index.js",
  "scripts": {
    "test": "yarn lint && yarn unit",
    "unit": "yarn jest",
    "lint": "eslint lib/",
    "format": "eslint lib/ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/headfire94/react-native-gateway.git"
  },
  "keywords": [
    "react",
    "portal",
    "gateway",
    "modal",
    "dialog",
    "react-native",
    "ios",
    "android"
  ],
  "author": "Egor Vodopyanov egorvodopyanov@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/headfire94/react-native-gateway/issues"
  },
  "homepage": "https://github.com/headfire94/react-native-gateway#readme",
  "peerDependencies": {
    "react": "^16.8.1",
    "react-native": "^0.59.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-preset-react-native": "^4.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "jest": "^24.9.0",
    "jsdom": "^16.5.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-native": "0.59.2",
    "react-test-renderer": "^16.9.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./tests/setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "testMatch": [
      "**/*.test.js"
    ],
    "snapshotSerializers": [
      "./node_modules/enzyme-to-json/serializer"
    ]
  }
}
